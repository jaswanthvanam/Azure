{
	"name": "dataflowcsv",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_bronze_sink_007",
						"type": "DatasetReference"
					},
					"name": "source"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "df_bronze_007",
						"type": "DatasetReference"
					},
					"name": "dataflowsink",
					"rejectedDataLinkedService": {
						"referenceName": "ls_BlobStorage_007",
						"type": "LinkedServiceReference"
					}
				}
			],
			"transformations": [
				{
					"name": "cast"
				},
				{
					"name": "derivedColumn"
				},
				{
					"name": "select"
				}
			],
			"scriptLines": [
				"source(output(",
				"          CUSTOMER_ID as string,",
				"          FULL_NAME as string,",
				"          EMAIL_ADDRESS as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source",
				"source cast(output(",
				"          CUSTOMER_ID as integer",
				"     ),",
				"     errors: true) ~> cast",
				"cast derive(ingested_by = 'jaswanth',",
				"          ingested_timestamp = currentTimestamp(),",
				"          ingested_date = currentDate(),",
				"          {first name} = 'jaswanth') ~> derivedColumn",
				"derivedColumn select(mapColumn(",
				"          CUSTOMER_ID,",
				"          FULL_NAME,",
				"          EMAIL_ADDRESS,",
				"          ingested_by,",
				"          ingested_timestamp,",
				"          ingested_date,",
				"          First_Name = {first name}",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select",
				"select sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> dataflowsink"
			]
		}
	}
}